$DaysInactive = 90
$time = (Get-Date).Adddays(-($DaysInactive))
$Users = Get-ADUser -Filter { LastLogonDate -lt $time -and Enabled -eq $false } -Properties LastLogonDate | Select-Object @{ Name="Username"; Expression={$_.SamAccountName} }, Name, LastLogonDate, DistinguishedName| export-csv C:\Users\lisa.bowerman\Documents\disabledUsers202401.csv

 Get-ADUser -Filter {Enabled -eq $false } -Properties *| export-csv C:\Users\lisa.bowerman\Documents\disabledUsersALL.csv


$DaysInactive = 435
$time = (Get-Date).Adddays(-($DaysInactive))
$Users = Get-ADUser -Filter { LastLogonDate -lt $time -and Enabled -eq $false } -Properties *| export-csv C:\Users\lisa.bowerman\Documents\disabledUsersSince2023.csv

Search-ADAccount -SearchBase "OU=myOU,DC=mydom,DC=adds" -AccountDisabled -UsersOnly | Get-ADUser -Properties whenChanged | Where whenChanged -gt (Get-Date).AddDays(-14)

